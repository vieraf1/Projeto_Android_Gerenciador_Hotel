            android:name="com.lucas.vieira.gerenciadorhotel.tela.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lucas.vieira.gerenciadorhotel.tela.ListaHotelActivity"
            android:label="@string/hotel" />
        <activity
            android:name="com.lucas.vieira.gerenciadorhotel.tela.FormularioHotelActivity"
            android:label="@string/hotel" />
        <activity
            android:name="com.lucas.vieira.gerenciadorhotel.tela.ListaQuartoActivity"
            android:label="@string/quarto" />
        <activity
            android:name="com.lucas.vieira.gerenciadorhotel.tela.FormularioQuartoActivity"
            android:label="@string/quarto" />
        <activity
            android:name="com.lucas.vieira.gerenciadorhotel.tela.ListaFuncionarioActivity"
            android:label="@string/func" />
        <activity
